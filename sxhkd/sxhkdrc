# SIMPLE X HOTKEY DAEMON

#
# wm independent hotkeys
#

# terminal emulator
super + Return
	st

# make it black and white
alt + shift + B
	xrandr --output eDP-1 --set CTM '1431655765,0,1431655765,0,1431655765,0,1431655765,0,1431655765,0,1431655765,0,1431655765,0,1431655765,0,1431655765,0'

# program launcher
XF86Search
	dmenu_run

# make sxhkd reload its configuration files:
super + shift + c
	pkill -USR1 -x sxhkd

# lfrun
super + shift + f
	st -e lfrun

# htop
super + shift + p
	st -e htop

# browser
super + shift + Return
	firefox

# lock screen
super + ctrl + l
	/home/probe/.config/scripts/lock.sh

# suspend
super + End
	systemctl suspend

# hibernate
super + ctrl + End
	systemctl hibernate

# display profiles
super + p
	/home/probe/.config/scripts/display.sh

# screenshots
Print
	scrot -q 100 '/home/probe/Pictures/Screenshots/%F_%T_$wx$h.png'

ctrl + Print
	scrot -u -q 100 '/home/probe/Pictures/Screenshots/%F_%T_$wx$h.png'

shift + @Print
	scrot -s -q 100 -l style=dash --freeze '/home/probe/Pictures/Screenshots/%F_%T_$wx$h.png'

super + Print
	scrot -q 100 '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'

super + ctrl + Print
	scrot -u -q 100 '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'

super + shift + @Print
	scrot -s -q 100 -l style=dash --freeze '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'

# volume
XF86AudioRaiseVolume
	pamixer -i 10

XF86AudioLowerVolume
	pamixer -d 10

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# media

XF86AudioPlay
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

# brightness

XF86MonBrightnessUp
	brightnessctl s +10%

XF86MonBrightnessDown
	brightnessctl s 10%-

#
# bspwm hotkeys
#

# restart bspwm
super + shift + r
	bspc wm -r

# quit bspwm
super + alt + q
	/home/probe/.config/scripts/exitX.sh

# close
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + e
	bspc desktop -l next

# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
#super + g
#	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

super + shift + Tab
    bspc node -f {next,prev}.local

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

