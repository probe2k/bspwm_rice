#!/bin/sh

picom &
xsetroot -cursor_name left_ptr &
xrandr --output eDP-1 --set CTM '1431655765,1,715827882,-2147483648,715827882,-2147483648,715827882,-2147483648,1431655765,1,715827882,-2147483648,715827882,-2147483648,715827882,-2147483648,1431655765,1' --gamma 0.9 &
xset -b &
feh --bg-scale --no-fehbg /home/probe/.config/bspwm/wal.jpg &
/home/probe/.config/polybar/launch.sh &

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width        0
#bspc config focused_border_color "#333333"
#bspc config normal_border_color  "#32344a"
#bspc config active_border_color  "#444b6a"
bspc config window_gap          20
bspc config top_padding         25

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true
